<div id="page_wrapper">
	<h1>New Post</h1>

	<%= form_for :post, url: posts_path do |f| %>
	<h3> Errors: </h3>
	<% if @post.errors.any? %>
	<ul>
	<% @post.errors.full_messages.each do |msg| %>
		<li> <%= msg %> </li>
		<% end %>
			</ul>
			<% end %>
	<p>
	<%= f.label :title %><br>
	<%= f.text_field :title %>
	</p>

	<p>
	<%= f.label :body %><br>
	<%= f.text_area :body %>
	</p>
	<p>
	<%= f.submit %> 
	</p>

	<% end %>

	<%= link_to "Back" , posts_path %>
</div>