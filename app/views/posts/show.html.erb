<div id="post_content">
	<h2><%= @post.title %></h2>
	<%= link_to "edit" , edit_post_path(@post.id) %> ||
	<%= link_to "destroy" , post_path(@post.id) , method: :delete, data:{confirm: "Are you sure ?"} %>
	<h1 class="title">
	<%= @post.title %>
	</h1>
	<p class="date">
	Submitted <%= time_ago_in_words(@post.created_at) %> Ago
 </p>

 <p class="body">
 	<%= @post.body %></p>
 	<%= link_to "Back" , posts_path %>
</div>